			#header
				#logo
					%h1
						%a{:href => '/'} Ruby on Rio
				#menu
					%ul
						%li
							%a{:href => 'http://groups.google.com.br/group/rubyonrio'} Google Group
						%li
							%a{:href => 'http://www.github.com/rubyonrio'} Github
						%li
							%a{:href => 'http://twitter.com/rubyonrio'} Twitter
						%li
							%a{:href => 'http://scr.im/rubyonrio'} Email

		#content_container.clearfix
			#content
				#intro
					%h2
						Grupo de desenvolvedores <strong>Ruby</strong> do <strong>Rio</strong> de Janeiro

				.clear

				.meeting
					%span#countdown
						&nbsp;&nbsp;&nbsp;&nbsp;Faltam
						%span#days_count
						%span#hours_count
						%span#minutes_count
						%span#seconds_count

					.info
						<strong>2º Encontro Ruby on Rio</strong> <a href="http://bit.ly/ii-encontro-rubyonrio">Inscreva-se gratuitamente</a><br />
