%html
	%head
		%title Ruby on Rio
		%meta{:charset => 'utf-8'}
		%link{:href => 'application.css', :rel => 'stylesheet', :type => 'text/css'}
		%link{:href => 'http://fonts.googleapis.com/css?family=Neuton', :rel => 'stylesheet', :type => 'text/css'}
