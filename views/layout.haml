!!! 5
%html
  %head
    %title Ruby on Rio
    %meta{:charset => 'utf-8'}
    %link{:href => 'application.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => 'http://fonts.googleapis.com/css?family=Neuton', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => 'http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:bold', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => 'jquery.tweet.css', :rel => 'stylesheet', :type => 'text/css'}
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', :type => 'text/javascript'}
    %script{:src => 'jquery.tweet.js', :type => 'text/javascript'}
    %script{:src => 'application.js', :type => 'text/javascript'}

  %body
    #header_container.clearfix
      %header#header
        #logo
          %h1
            %a{:href => '/'}
              %img{:src => 'logo2.png'}
        %nav#menu
          %ul
            %li
              %a{:href => 'http://groups.google.com.br/group/rubyonrio'} Google Group
            %li
              %a{:href => 'http://www.github.com/rubyonrio'} Github
            %li
              %a{:href => 'http://twitter.com/rubyonrio'} Twitter
            %li
              %a{:href => 'http://scr.im/rubyonrio'} Email

    #content_container.clearfix
      %section#content
        = yield
    #footer_container.clearfix
      %footer#footer
        %a{:href => 'http://www.github.com/rubyonrio/rubyonrio'}Fork me on GitHub
        %a{:href => 'http://www.devinrio.com.br'}
          %img{:src => 'devinrio2010.gif',
                :alt => 'Dev in Rio 2010'}      

